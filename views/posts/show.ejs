<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= post.title %></h1>
          <div class="text-muted mb-3">
            <small>
              Posted by <%= post.author.name %> on <%= new Date(post.createdAt).toLocaleDateString() %>
            </small>
          </div>
          
          <% if (post.image) { %>
            <div class="mb-4">
              <img src="<%= post.image %>" class="img-fluid rounded" alt="Post image">
            </div>
          <% } %>

          <div class="card-text mb-4">
            <%- post.content %>
          </div>
          
          <% if (user && post.author._id.toString() === user._id.toString()) { %>
            <div class="d-flex gap-2">
              <a href="/posts/<%= post._id %>/edit" class="btn btn-primary">Edit</a>
              <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
      
      <div class="mt-3">
        <a href="/posts" class="btn btn-secondary">&larr; Back to Posts</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 